{
  "name": "twitter-muter-revamp",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "__MSG_appDescription__ Test",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "_default_locale": "en",
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_title": "Twitter Muter",
    "default_popup": "popup.html"
  },
  "_options_page": "options.html",
  "_options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "omnibox": {
    "keyword": "Twitter Muter"
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'"
}
